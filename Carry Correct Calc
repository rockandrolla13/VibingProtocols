%=============================================================================
\section{Implementation Algorithm}
%=============================================================================

\begin{algorithm}[H]
\caption{Complete Asymmetric Carry Strategy}
\begin{algorithmic}[1]
\State \textbf{// DAILY: Data Collection and Signal Update}
\For{each bond $i$ in universe}
    \State Fetch: $P_i$, $\text{AI}_i$, $c_i$, $D_i$, $\sigma_i$, $\phi_i$, $r_i^{\text{repo}}$
    \State Compute: $P_i^{\text{dirty}} \gets P_i + \text{AI}_i$
    \State Compute: $\tau_i \gets$ years to maturity
    \State Fetch: $Y_{t,\tau_i}$, $Y_{t,\tau_i - 1}$ from credit curve
    \State Compute: $\text{Roll}_i \gets Y_{t,\tau_i} - Y_{t,\tau_i - 1}$
    
    \State
    \State \textbf{// Long Carry}
    \State $\text{CY}_i \gets c_i / (P_i^{\text{dirty}} / 100)$
    \State $\text{RollRet}_i \gets (P_i / P_i^{\text{dirty}}) \times D_i \times \text{Roll}_i$
    \State $C_i^{\text{long}} \gets \text{CY}_i - r^{\text{fund}} + \text{RollRet}_i$
    
    \State
    \State \textbf{// Short Carry}
    \State $C_i^{\text{short}} \gets r_i^{\text{repo}} - \text{CY}_i - \phi_i - \text{RollRet}_i$
    
    \State
    \State \textbf{// Signals}
    \State $S_i^{\text{long}} \gets C_i^{\text{long}} / \max(\sigma_i, 0.01)$
    \State $S_i^{\text{short}} \gets C_i^{\text{short}} / \max(\sigma_i, 0.01)$
\EndFor

\State
\State \textbf{// MONTHLY: Portfolio Construction}
\State $\mathcal{U}^{\text{long}} \gets \{i : C_i^{\text{long}} > 0\}$
\State $\mathcal{U}^{\text{short}} \gets \{i : C_i^{\text{short}} > 0 \text{ and borrowable}\}$

\State
\State \textbf{// Select top 30\% from each profitable universe}
\State $\mathcal{L} \gets$ Top 30\% of $\mathcal{U}^{\text{long}}$ by $S^{\text{long}}$ (descending)
\State $\mathcal{S} \gets$ Top 30\% of $\mathcal{U}^{\text{short}}$ by $S^{\text{short}}$ (descending)

\State
\State \textbf{// Calculate weights}
\State $W^{\text{long}} \gets \sum_{j \in \mathcal{L}} S_j^{\text{long}}$
\State $W^{\text{short}} \gets \sum_{j \in \mathcal{S}} S_j^{\text{short}}$
\For{$i \in \mathcal{L}$}
    \State $w_i \gets +S_i^{\text{long}} / W^{\text{long}}$ \Comment{Long weights sum to 1}
\EndFor
\For{$i \in \mathcal{S}$}
    \State $w_i \gets -S_i^{\text{short}} / W^{\text{short}}$ \Comment{Short weights sum to $-1$}
\EndFor

\State
\State \textbf{// Apply constraints}
\State Apply concentration limits ($|w_i| \leq 10\%$)
\State Apply liquidity limits ($|w_i| \times \text{NAV} \leq 5\% \times \text{ADV}_i$)
\State Renormalize to maintain gross exposures

\State
\State \textbf{// Generate trades}
\State $\Delta w_i \gets w_i^{\text{new}} - w_i^{\text{current}}$
\State Execute rebalancing trades
\end{algorithmic}
\end{algorithm}

%=============================================================================
